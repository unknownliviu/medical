<%- model_class = Prescription -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @prescription.title %></dd>
  <h2>Items:</h2>
  <% @prescription.items.each do |item| %>
  <dt><strong>Name</strong></dt>
  <dd><%= item.name %></dd>
  
  <dt><strong>Instructions</strong></dt>
  <dd><%= item.instructions %></dd>
  <hr>
  <% end %>
</dl>
<input type="button" value="Print Prescription" class="btn btn-success no-print" onClick="window.print()">

<div class="navbar">
  

<%= link_to t('.back', :default => t("helpers.links.back")),
              prescriptions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_prescription_path(@prescription), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              prescription_path(@prescription),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>